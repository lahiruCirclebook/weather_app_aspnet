<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="weather__app.WeatherPage"
             Title="WeatherPage">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" RowSpacing="20">
        <StackLayout Grid.Row="0" Margin="20,20,20,0" Orientation="Horizontal">
            <Frame Padding="10" CornerRadius="35" HasShadow="True" BorderColor="LightGray" >
                <Label Text="Your Location" FontSize="Default" />

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapLocation" Tapped="OnLocationTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <ImageButton Source="search_2.png" HeightRequest=" 30" WidthRequest=" 30" HorizontalOptions="EndAndExpand" />
        </StackLayout>

        <StackLayout Grid.Row="1" Orientation="Vertical">
            <Label x:Name="LblCity" FontSize="40" HorizontalOptions="Center" TextColor="Gray" />
            <Label x:Name="LblDescription" FontSize="Medium" HorizontalOptions="Center" TextColor="SlateGray"/>
        </StackLayout>

        <Image Grid.Row="2" x:Name="ImgWeatherIcon" VerticalOptions="Start" HeightRequest="200" WidthRequest="200"/>

        <Grid Grid.Row="3" RowDefinitions="Auto, Auto" ColumnDefinitions="0.33*, 0.33*, 0.33*" Margin="20">
            <Image Source="humadity_without_back.png" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" HeightRequest="45"/>
            <Label x:Name="LblHumadity" Grid.Row="1" Grid.Column="0" HorizontalOptions="Center"/>
            
            <Label x:Name="LblTemperature" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" HorizontalOptions="Center" FontSize="40" FontAttributes="Bold"/>

            <Image Source="wind_without_back.png" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" HeightRequest="45"/>
            <Label x:Name="LblWind" Grid.Row="1" Grid.Column="2" HorizontalOptions="Center"/>
        </Grid>

        <CollectionView Grid.Row="4" x:Name="CvWeather" HeightRequest="200">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing=" 20" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Grid.Row="4" RowDefinitions="Auto, Auto, Auto">
                        <Image Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="50" WidthRequest="50" Source="{Binding weather[0].fullIconUrl}" />
                        <Label Grid.Row="1" HorizontalOptions="Center" FontSize="Large" Text="{Binding main.temperature, StringFormat='{0}Â°C'}"/>
                        <Label Grid.Row="2" HorizontalOptions="Center" FontSize="Small" Text="{Binding dateTime}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>